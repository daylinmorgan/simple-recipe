{
  "name": "simple-recipe",
  "version": "0.1.0",
  "description": "Simple Recipe Theme for Hugo",
  "scripts": {
    "dev": "run-p hugo:dev uno:dev",
    "hugo:dev": "cd exampleSite && hugo server --themesDir ../.. --disableFastRender",
    "uno:dev": "unocss \"./layouts/**/*.html\"  --out-file assets/css/uno.css -w",
    "uno:prd": "unocss \"./layouts/**/*.html\" --out-file assets/css/uno.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daylinmorgan/simple-recipe.git"
  },
  "author": "Daylin Morgan",
  "devDependencies": {
    "@unocss/cli": "^0.63.1",
    "@unocss/reset": "^0.63.1",
    "npm-run-all": "^4.1.5",
    "unocss": "^0.63.1"
  }
}
