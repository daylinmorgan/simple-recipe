{
  "name": "simple-recipe",
  "version": "0.1.0",
  "description": "Simple Recipe Theme for Hugo",
  "scripts": {
    "hugo:prd": "hugo -e production -v --i18n-warnings --minify --gc --cleanDestinationDir",
    "hugo:dev": "hugo -e development --config config.yaml,config.toml,config.dev.toml -v --i18n-warnings --gc --cleanDestinationDir --buildDrafts --buildFuture",
    "hugo:srv": "hugo server -e development --config config.yaml,config.toml,config.dev.toml -v --i18n-warnings --buildDrafts --buildFuture --disableFastRender",
    "theme:srv": "hugo server -e development -s exampleSite --themesDir=../.. --disableFastRender --buildDrafts --buildFuture",
    "css:dev": "postcss ./src/index.css --verbose -o ./assets/app.css",
    "css:prd": "postcss ./src/index.css --verbose -o ./assets/app.min.css",
    "dev": "NODE_ENV=development npm run css:dev",
    "prd": "NODE_ENV=production npm run css:prd",
    "watch": "npm run watch:css",
    "watch:css": "chokidar \"./src/*.css\" \"./src/tailwind.config.js\" -c \"NODE_ENV=development npm run css:dev\"",
    "scriptcopy":"cp package.hugo.json ../../package.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DaylinMorgan/simple-recipe.git"
  },
  "author": "Daylin Morgan",
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^4.0.2",
    "@tailwindcss/typography": "^0.4.0",
    "autoprefixer": "^10.2.5",
    "chokidar": "^3.5.1",
    "chokidar-cli": "^2.1.0",
    "cssnano": "^4.1.11",
    "postcss": "^8.2.9",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.1",
    "postcss-nesting": "^7.0.1",
    "tailwindcss": "^2.1.0"
  }
}
